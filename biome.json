{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": { "noExplicitAny": "warn", "noArrayIndexKey": "warn" },
      "a11y": {
        "useButtonType": "warn",
        "noSvgWithoutTitle": "warn",
        "noLabelWithoutControl": "warn"
      },
      "style": { "noNonNullAssertion": "warn" },
      "complexity": { "noUselessCatch": "warn" },
      "correctness": { "useParseIntRadix": "warn", "noUnusedFunctionParameters": "warn" }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/*.gen.ts",
      "!**/database.types.ts",
      "!**/supabase.ts"
    ]
  }
}
